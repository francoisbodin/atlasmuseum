<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

   

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

       


        <RelativeLayout
            android:id="@+id/load_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:background="@drawable/backrepeat" >

            <RelativeLayout
                android:id="@+id/relativeLayoutPhotoModifier"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:maxHeight="200dp"
                    android:maxWidth="120dp" >
                </ImageView>

                <ImageButton
                    android:id="@+id/modif_photo"
                    android:layout_marginRight="5dp" android:layout_marginTop="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:src="@drawable/contrib_modif_button"
                    />
            </RelativeLayout>

            
            
            
            <!-- Image loading -->

            <RelativeLayout
                android:id="@+id/image_loading"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" >
 
					
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         >
                         
                        <!-- fond gris -->
				<ImageView
                            android:id="@+id/image_loadin123"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_load_photo_notice_empty" />
                <!-- text+icon -->
                 <RelativeLayout 
				            android:layout_width="wrap_content"
        	       			android:layout_height="wrap_content"
        	       			android:layout_centerHorizontal="true"
        	       			android:layout_centerVertical="true"
				            >
                <ImageView
                    android:id="@+id/imageLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_contrib_photo" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/imageLoad"
                            android:layout_marginLeft="5dp"
                            android:text="@string/prendre_photo" />

                        
						</RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout><!--  block text + apareil photo -->

            </RelativeLayout><!-- block prendre une photo -->
            
            <!-- fin Image loading -->
        </RelativeLayout>

        <!-- android:layout_centerVertical="true" -->
    </LinearLayout>

	    <ListView
	        android:id="@+id/list_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/liner"
	        android:layout_below="@+id/line"
	        android:scrollbarThumbVertical="@drawable/list_view_scroll"
	        android:listSelector="@drawable/on_pressed_listview_background"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:paddingRight="@dimen/activity_horizontal_margin"
	         >

	    </ListView>
	
	    <LinearLayout
	        android:id="@+id/liner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:orientation="horizontal"
	        >
	<RelativeLayout
	    android:id="@+id/buttonAnnuler"
		android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#ffec7f"
		>
            <RelativeLayout 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
                >
                
                 <TextView
	        android:id="@+id/textannuler"
	        android:textColor="#333333"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:paddingLeft="5dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageannuler"
	        android:text="@string/ANNULER"
	        />
	    
	    <ImageView 
	        android:id="@+id/imageannuler"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:background="#000000"
	        />
                
            </RelativeLayout>
	   
	    <!-- button save -->
	</RelativeLayout>
	
    	<RelativeLayout
	    android:id="@+id/mbuttonSave"
		android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#ffec7f"
		>
            <RelativeLayout 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
                >
                
                 <TextView
	        android:id="@+id/textsave"
	        android:textColor="#333333"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:layout_toRightOf="@+id/imagesave"
	        android:text="@string/SAUVEGARDER"
	        />
	    
	    <ImageView 
	        android:id="@+id/imagesave"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_contrib_save_modif"
	        android:background="@null"
	        />
                
            </RelativeLayout>
	   
	    
	</RelativeLayout>
			 
		<!--  Button envoyer -->
    	<RelativeLayout
	    android:id="@+id/mbuttonEnvoyer"
		android:layout_width="wrap_content"
        android:layout_height="70dp"
		android:layout_weight="1"
		android:background="#ffec7f"
		>
            <RelativeLayout 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
                >
                
                 <TextView
	        android:id="@+id/textenvoyer"
	        android:textColor="#333333"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:layout_toRightOf="@+id/imageenvoyer"
	        android:text="@string/ENVOYER"
	        />
	    
	    <ImageView 
	        android:id="@+id/imageenvoyer"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/ic_contrib_send_modif"
	        android:layout_centerVertical="true"
	        />
                
            </RelativeLayout>
	   
	    <!-- button save -->
	</RelativeLayout>

	</LinearLayout>
</RelativeLayout>