<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/view_thumb"
        android:layout_width="192px"
        android:layout_height="192px"
        android:padding="5dp"
        android:src="@drawable/ic_load_thumb" >
    </ImageView>

    <LinearLayout
        android:id="@+id/champs_clickable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp" >
        <TextView
            android:id="@+id/text_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textColor="#333333"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/text_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="auteur"
            android:textColor="#686868"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/notice_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="annee"
                android:textColor="#686868"
                android:textSize="13dp" >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/notice_year" >
            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Ville(Pays)"
                android:textColor="#999999" />
            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="105 m"
                android:textColor="#999999"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>