<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff">
    
    <TextView
        android:id="@+id/text_new_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding"
        android:text="@string/title_new_notice"
        android:textColor="#ffda00"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_new_notice"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#ffda00" />

    <ListView
        android:id="@+id/list_new_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/on_pressed_listview_background"
        android:scrollbarThumbVertical="@drawable/list_view_scroll" />
    
    
    <TextView
        android:id="@+id/text_modif_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding"
        android:text="@string/title_modif_notice"
        android:textColor="#ffda00"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_modif_notice"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#ffda00" />

    <ListView
        android:id="@+id/list_modif_notice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/on_pressed_listview_background"
        android:scrollbarThumbVertical="@drawable/list_view_scroll" />
    
    
</LinearLayout>
