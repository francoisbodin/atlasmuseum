<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titre_contrib"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="@string/TITREString"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffda00"
        android:text="@string/Ok"
        android:textColor="#333333"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/relativ12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/titre_contrib"
        android:layout_alignTop="@+id/titre_contrib"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="45dp"
        android:orientation="vertical" >

        <!-- pour afficher liste checkBox/radio -->

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/on_pressed_listview_background"
            android:scrollbarThumbVertical="@drawable/list_view_scroll"
            android:visibility="gone" >
        </ListView>

        <LinearLayout
            android:id="@+id/linearMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:maxLength="4"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/infos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editText1"
                android:layout_marginTop="18dp"
                android:text="@string/contrib_acces_visibilite"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infos"
                android:layout_centerHorizontal="true"
                android:background="#ffda00"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/Ok"
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>